<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2E13977.View.PageMap"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Entry">
                <Setter Property="TextColor" Value="Black"/>
                <Setter Property="MaxLength" Value="100"/>
            </Style>
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="SteelBlue"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>

        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.ToolbarItems>
 
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <maps:Map x:Name="mapa" IsShowingUser="True"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Padding="20">
                <Button x:Name="btnCompartir" Text="Compartir ubicacion" Clicked="btnCompartir_Clicked"  WidthRequest="255" FontAttributes="Bold"/>
            </StackLayout>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>